{
  "name": "linkdock",
  "version": "1.3.5",
  "description": "Bookmark manager with groups, tags, drag&drop, hotkeys, window restore",
  "main": "main.js",
  "author": "LinkDock",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "prebuild": "node scripts/make-ico.js",               // <— ДОБАВЛЕНО
    "build": "electron-builder --win nsis portable",       // <— portable + nsis
    "publish": "electron-builder --win nsis portable -p always"
  },
  "dependencies": {
    "electron-store": "8.1.0",            // <— фикс для ERR_REQUIRE_ESM
    "electron-updater": "^6.3.0"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2",
    "png-to-ico": "^2.1.8"                // <— ДОБАВЛЕНО
  },
  "build": {
    "appId": "com.linkdock.app",
    "productName": "LinkDock",
    "asar": true,
    "npmRebuild": false,
    "files": ["**/*", "!**/*.map"],
    "directories": { "buildResources": "build" },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "build/icon.ico",
      "publisherName": "LinkDock"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "LinkDock",
      "artifactName": "LinkDock-Setup-${version}.exe"
    },
    "portable": { "artifactName": "LinkDock-${version}-portable.exe" },
    "publish": [ { "provider": "github", "owner": "TENET808", "repo": "LinkDock" } ]
  }
}
